<?xml version="1.0" encoding="utf-8"?>
<TableLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="match_parent" android:layout_width="match_parent" android:weightSum="1">
    <TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:baselineAligned="true">
        <TextView android:id="@+id/textView1" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_weight="0" android:layout_width="match_parent" android:text="Hostname" android:layout_margin="1dp"></TextView>
        <EditText android:layout_height="wrap_content" android:layout_width="0dp" android:inputType="textEmailAddress" android:layout_weight="1" android:id="@+id/hostField"></EditText>
    </TableRow>
    <TableRow android:id="@+id/tableRow2" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:id="@+id/textView2" android:layout_height="wrap_content" android:text="Port" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_weight="0" android:layout_width="match_parent" android:layout_margin="1dp"></TextView>
        <EditText android:layout_height="wrap_content" android:inputType="number" android:layout_weight="1" android:layout_width="0dp" android:numeric="integer" android:maxLength="5" android:id="@+id/portField"></EditText>
    </TableRow>
    <TableRow android:id="@+id/tableRow5" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Accelerometer" android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView3" android:layout_gravity="center_vertical" android:layout_margin="1dp"></TextView>
        <ToggleButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ToggleButton" android:id="@+id/accelToggle"></ToggleButton>
    </TableRow>
    <TableRow android:id="@+id/tableRow4" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Touch Screen" android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView4" android:layout_gravity="center_vertical" android:layout_margin="1dp"></TextView>
        <ToggleButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ToggleButton" android:id="@+id/touchToggle"></ToggleButton>
    </TableRow>
    <TableRow android:id="@+id/tableRow3" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Group Packets" android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView5" android:layout_gravity="center_vertical" android:layout_margin="1dp"></TextView>
        <ToggleButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ToggleButton" android:id="@+id/groupToggle"></ToggleButton>
    </TableRow>
</TableLayout>
